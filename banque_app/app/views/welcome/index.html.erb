<h1>Banque!</h1>

<div id="main">

  <div id="accounts">
  </div>
  <button id="withdraw-transfer">Withdraws/Transfers</button>
  <button id="add-account">Add an Account</button>

  <div id="balance">
    <p>Total Balance</p>
  </div>
  <button id="deposit-button">Deposit</button>

</div>

<div class="hide" id="deposit">
  <form action="/" method="post">
    <select name="account">
      <option value="">Account</option>
      <% @accounts.each do |account| %>
        <option value="<%= account.id %>">
          <%= account.name %>
        </option>
      <% end %>
    </select>
    <input type="hidden" name="_method" value="put">
    <input type="string" id="account" placeholder="amount"/><br/>
  <button id="deposit-to-account">Deposit</button>
  </form>
</div>

